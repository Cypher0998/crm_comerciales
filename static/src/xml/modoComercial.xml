<?xml version="1.0" encoding="utf-8"?>

<template xml:space="preserve">
	<t t-name="CommercialModeMenu" >
		<div class="container-fluid" id = "quit_scrollbar">
			<div class="row align-items-start fixed-top" style="background-color:#ab3dd9; max-height:60px;">
				<div class="col-4 col-sm-4 col-md-4 col-lg-4 col-xl-4">
					<nav class="navbar navbar-expand-lg-xl justify-content-start" style="margin:0;">
						<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Boton de navegacion">
							<span class="glyphicon glyphicon-menu-hamburger text-white" style="font-size:3vh;"></span>
						</button>
					</nav>
				</div> 
				<div class="col-8 col-sm-8 col-md-8 col-lg-8 col-xl-8" style="min-height:50px">
					<form class= "form-search">
						<div class="row align-items-center justify-content-end">
							<div class="col-8" style="min-height:50px">
								<input type="text" class="form-control" placeholder="Search"/>
							</div>
							<div class="col-4" style="min-height:50px">
								<div class="row">
									<div class="col-3 col-sm-6" style="padding-right:5px;padding-left:5px;">
										<button class="btn bg-transparent">
											<i class="bi bi-search text-white" style="font-size:2.3vh;"></i>
										</button>
									</div>
									<div class="col-3 col-sm-6">
										<button class="btn bg-transparent">
											<i class="bi bi-cart2 text-white" style="font-size:2.3vh;"></i>
										</button>
									</div>
								</div>
							</div>
						</div>
					</form>
				</div>	
			</div>
			<div class="row align-items-center justify-content-around" style="background-color:#feffde;height:100vh;">

				<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" >
					<ol class="carousel-indicators">
						<li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
						<li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
						<li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
					</ol>
					<div class="carousel-inner" style="height:70vh;">
						<div class="carousel-item active">
							<img class="d-block w-100" src="/crm_comerciales/static/src/img/vaqueroRasgadoRelaxed.jpg" alt="First slide"/>
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="/crm_comerciales/static/src/img/blazerBasicaRoll-Up.jpg" alt="Second slide"/>
						</div>
						<div class="carousel-item">
							<img class="d-block w-100" src="/crm_comerciales/static/src/img/vaqueroRasgadoRelaxed.jpg" alt="Third slide"/>
						</div>
					</div>
					<a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
							<span class="carousel-control-prev-icon" aria-hidden="false"></span>
							<span class="sr-only">Previous</span>
					</a>
					<a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
						<span class="carousel-control-next-icon" aria-hidden="false"></span>
						<span class="sr-only">Next</span>
					</a>
				</div>
			</div>
			<div class="row justify-content-around align-items-end fixed-bottom" style="background-color:#ab3dd9;">
				<div class="btn-group" role="group" aria-label="Inicio">
					<button type="button" class="btn bg-transparent">
						<i class="bi bi-house text-white" style="font-size:5vh;"></i>
					</button>
				</div>
				<div class="btn-group" role="group" aria-label="Carrito">
					<button type="button" class="btn bg-transparent">
						<i class="bi bi-cart2 text-white" style="font-size:5vh;"></i>
					</button>
				</div>
				<div class="btn-group" role="group" aria-label="Perfil">
					<button type="button" class="btn bg-transparent">
						<i class="bi bi-person text-white" style="font-size:5vh;"></i>
					</button>
				</div>
			</div>
		</div>
	</t>
</template>
